# Static LAN targets use the pre-seeded known_hosts
Host forge
  HostName 10.0.78.108
  Port 2222
  User root
  IdentityFile /root/.ssh/id_ed25519
  IdentitiesOnly yes
  UserKnownHostsFile /root/.ssh/known_hosts
  StrictHostKeyChecking yes

Host comfy
  HostName 10.0.78.108
  Port 2223
  User root
  IdentityFile /root/.ssh/id_ed25519
  IdentitiesOnly yes
  UserKnownHostsFile /root/.ssh/known_hosts
  StrictHostKeyChecking yes

# VastAI instances: accept-new and write to the writable cache
Host vast-*
  # Youâ€™ll set HostName at runtime (or through code)
  User root
  IdentityFile /root/.ssh/id_ed25519
  IdentitiesOnly yes
  UserKnownHostsFile /root/.ssh/vast_known_hosts
  StrictHostKeyChecking accept-new

